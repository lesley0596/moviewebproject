@model Movie

@* <partial name="_BreadCrumbs" model=@(new [] { 
    ("/","Home"), 
    ("/movie","Movies"), 
    ($"/movie/details/{Model.Id}", $"{Model.Id}"), 
    ("", "Edit") 
    }) /> *@

<div class="d-flex align-items-center justify-content-between mb-4">
    <h3>Edit Movie</h3>
</div>

<div class="card rounded shadow p-3 formHeadings">

    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- we hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the movie passed to the controller is complete -->
        <input type="hidden" asp-for="Id" class="form-control" />

        <!-- form groups for each movie attributed being edited -->
        <div class="card rounded shadow p-4">

            <!-- Title -->
            <div>
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Director -->
            <div>
                <label asp-for="Director" class="form-label"></label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <!-- Year -->
                <div class="col">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <!-- Duration -->
                <div class="col">
                    <label asp-for="MovieDuration" class="form-label">Movie Duration (minutes)</label>
                    <input asp-for="MovieDuration" class="form-control" />
                    <span asp-validation-for="MovieDuration" class="text-danger"></span>
                </div>

                <!-- Genre -->
                <div class="col">
                    <label asp-for="Genre" class="form-label"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>

            <!-- Composer -->
            <div>
                <label asp-for="Composer" class="form-label"></label>
                <input asp-for="Composer" class="form-control" />
                <span asp-validation-for="Composer" class="text-danger"></span>
            </div>

            <!-- Plot Summary -->
            <div>
                <label asp-for="PlotSummary" class="form-label"></label>
                <textarea rows="5" asp-for="PlotSummary" class="form-control"></textarea>
                <span asp-validation-for="PlotSummary" class="text-danger"></span>
            </div>

            <!-- PosterUrl -->
            <div>
                <label asp-for="PosterUrl" class="form-label"></label>
                <input asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>

            <!-- submit button and cancel link which navigates to Index action -->
            <div class="mt-3">
                <input type="submit" value="Save" class="btn btn-sm" />
                <!-- navigation to display Movie on cancel -->
                <a class="btn buttondelete btn-sm" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}