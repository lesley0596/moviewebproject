@model Review

<!--add a breadcrumb partial -->


<div class="card shadow rounded p-4">
    <!-- Title bar -->
    <div class="border-bottom d-flex align-items-center justify-content-between mb-3">
        <h3 class="text-black">Edit Review for @Model.Movie.Title</h3>
    </div>

    <form asp-action="ReviewEdit"class="formHeadings">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
        <!-- hide non editable values -->
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="MovieId"/>

        <div class="mt-3">
            <label asp-for="Statement" class="form-label"></label>      
            <textarea rows="5" asp-for="Statement" class="form-control"></textarea>
            <span asp-validation-for="Statement" class="text-danger"></span>
        </div>

         <div class="mt-3">
            <label asp-for="Rating" class="form-label">Rating</label>      
            <input asp-for="Rating" class="form-control" min="1" max="10"></input>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        
        <div class="mt-3">           
            <button type="submit" class="btn" aria-label="save">Save</button>
            <a class="btn" asp-action="Details" asp-route-id=@Model.MovieId aria-label="cancel">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}